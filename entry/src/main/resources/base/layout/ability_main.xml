<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    xmlns:app = "style">

    <com.zhaoxing.view.sharpview.SharpImageView
        ohos:width="200vp"
        ohos:height="200vp"
        ohos:top_margin="50vp"
        ohos:left_margin="50vp"
        ohos:scale_mode="center"
        ohos:image_src="$media:test"
        app:backgroundColor="#FF0000FF"
        app:relativePosition="0.1"
        app:arrowDirection="right"
        app:sharpSize="40px"
        />

    <com.zhaoxing.view.sharpview.SharpTextView
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="50vp"
        ohos:padding="20vp"
        ohos:text="54654654"
        ohos:text_size="30vp"
        ohos:text_color="#FFFFFF"
        app:radius="20vp"
        app:startBgColor="#ff0000ff"
        app:middleBgColor="#ff1493ff"
        app:endBgColor="#ffff00ff"
        />

    <com.zhaoxing.view.sharpview.SharpEditText
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="50vp"
        ohos:text_color="#FFFFFF"
        ohos:text="this is a SharpTextView"
        ohos:text_size="30vp"
        app:backgroundColor="#FFFF0000"
        app:arrowDirection="left"
        app:relativePosition="0.5"
        app:sharpSize="10vp"
        />

    <com.zhaoxing.view.sharpview.SharpLinearLayout
        ohos:width="700vp"
        ohos:height="200vp"
        ohos:orientation="vertical"
        ohos:margin="50vp"
        app:radius="10vp"
        app:arrowDirection="right"
        app:backgroundColor="#FF000000"
        app:relativePosition="0.9"
        app:sharpSize="15vp">

        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:margin="10vp"
            ohos:text_color="#FFFFFF"
            ohos:text_size="30vp"
            ohos:background_element="#00FF00"
            ohos:text="a child inside the SharpLinearLayout"
            />

        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:margin="10vp"
            ohos:text_color="#0000FF"
            ohos:text_size="30vp"
            ohos:text="this is another child view"
            />

    </com.zhaoxing.view.sharpview.SharpLinearLayout>

</DirectionalLayout>
